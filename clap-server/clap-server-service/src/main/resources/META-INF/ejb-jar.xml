<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
        version="3.1"
        >
    <interceptors>
        <interceptor>
            <interceptor-class>com.noveogroup.clap.security.ShiroSecuredInterceptor</interceptor-class>
        </interceptor>
        <interceptor>
            <interceptor-class>com.noveogroup.clap.validation.ValidationInterceptor</interceptor-class>
        </interceptor>
        <interceptor>
            <interceptor-class>com.noveogroup.clap.exception.ExceptionWrapperInterceptor</interceptor-class>
        </interceptor>
    </interceptors>
    <assembly-descriptor>
        <interceptor-binding>
            <ejb-name>*</ejb-name>
            <interceptor-order>
                <interceptor-class>com.noveogroup.clap.security.ShiroSecuredInterceptor</interceptor-class>
                <interceptor-class>com.noveogroup.clap.exception.ExceptionWrapperInterceptor</interceptor-class>
            </interceptor-order>
        </interceptor-binding>
    </assembly-descriptor>
</ejb-jar>