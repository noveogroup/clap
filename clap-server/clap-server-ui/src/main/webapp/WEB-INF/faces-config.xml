<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <application>
        <resource-bundle>
            <base-name>com.noveogroup.clap.web.util.locale.ClapMessagesBundle</base-name>
            <var>msgs</var>
        </resource-bundle>
        <locale-config>
            <default-locale>ru</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-handler>com.noveogroup.clap.web.component.ELImageResourceHandler</resource-handler>

    </application>
    <converter>
        <converter-id>TimestampConverter</converter-id>
        <converter-class>com.noveogroup.clap.web.util.converter.TimestampConverter</converter-class>
    </converter>
</faces-config>